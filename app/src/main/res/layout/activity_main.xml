<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.yy.atmosphere.atmospheretest.AtmosphereView
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark"
            app:planet_color="planet_color_gray" />

        <com.yy.atmosphere.atmospheretest.AtmosphereView
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark"
            app:planet_color="planet_color_green" />

        <com.yy.atmosphere.atmospheretest.AtmosphereView
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark"
            app:planet_color="planet_color_blue" />

        <com.yy.atmosphere.atmospheretest.AtmosphereView
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark"
            app:planet_color="planet_color_purple" />

        <com.yy.atmosphere.atmospheretest.AtmosphereView
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark"
            app:planet_color="planet_color_red" />

        <com.yy.atmosphere.atmospheretest.AtmosphereView
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark"
            app:planet_color="planet_color_orange" />

        <RelativeLayout
            android:layout_width="256dp"
            android:layout_height="256dp">

            <com.yy.atmosphere.atmospheretest.AtmosphereView
                android:layout_width="256dp"
                android:layout_height="256dp"
                app:planet_color="planet_color_yellow" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/planet_purple" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/face2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/level_11_1" />


        </RelativeLayout>
    </LinearLayout>
</ScrollView>